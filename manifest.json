{
    "manifest_version": 3,
    "name": "Scroll Bookmark",
    "version": "1.0",
    "description": "스크롤 위치를 북마크하는 크롬 익스텐션",
    "permissions": ["storage", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  